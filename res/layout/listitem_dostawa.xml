<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView_itemdostawa_nazwa"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Chleb pełnoziarnisty" />

    <TextView
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView_itemdostawa_cena"
        android:layout_weight="0.54"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1,20 zł" />

    <TextView
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView_itemdostawa_ilosc"
        android:layout_weight="0.54"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="20" />

    <TextView
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView_itemdostawa_suma"
        android:layout_weight="0.54"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="240,00 zł" />

</LinearLayout>
